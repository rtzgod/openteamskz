# =============================================================================
# OpenTeams LOCAL Development - Environment Variables
# =============================================================================
# For local development - these defaults work out of the box
# Just run: docker compose -f docker-compose.local.yml up -d
# =============================================================================

# -----------------------------------------------------------------------------
# GLOBAL SETTINGS
# -----------------------------------------------------------------------------
# Forces the network name to match Traefik's config (prevents folder name issues)
COMPOSE_PROJECT_NAME=openteamskz

TZ=UTC
RESTART_POLICY=unless-stopped

# Docker host IP (use 127.0.0.1 for local)
DOCKER_HOST_ADDRESS=127.0.0.1

# -----------------------------------------------------------------------------
# LLDAP (Identity Provider) - Dev defaults provided
# -----------------------------------------------------------------------------
LLDAP_JWT_SECRET=localdevjwtsecret123456789012345
LLDAP_ADMIN_PASSWORD=admin123
LLDAP_BASE_DN=dc=openteams,dc=local

# -----------------------------------------------------------------------------
# MONGODB - Dev defaults provided
# -----------------------------------------------------------------------------
MONGO_ROOT_PASS=localrootpass123
MONGO_REPLICA_KEY=localreplicakey123456789012345678901234567890
RC_DB_PASS=rcpass123
WEKAN_DB_PASS=wekanpass123

# -----------------------------------------------------------------------------
# NEXTCLOUD (MariaDB + Redis) - Dev defaults provided
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=localrootpass
MYSQL_PASSWORD=nextcloudpass
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
REDIS_PASSWORD=localredispass

# -----------------------------------------------------------------------------
# ROCKET.CHAT
# -----------------------------------------------------------------------------
ROCKETCHAT_VERSION=7

# -----------------------------------------------------------------------------
# JITSI - Dev defaults provided
# -----------------------------------------------------------------------------
JICOFO_AUTH_PASSWORD=jicofopass123
JVB_AUTH_PASSWORD=jvbpass123
JVB_PORT=10000
JIBRI_RECORDER_PASSWORD=jibrirecorderpass123
JIBRI_XMPP_PASSWORD=jibrixmpppass123
