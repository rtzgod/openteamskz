# =============================================================================
# OpenTeams PRODUCTION - Environment Variables  
# =============================================================================
# Copy this file to .env and fill in ALL values before deployment
# Generate secure passwords: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# GLOBAL SETTINGS (REQUIRED)
# -----------------------------------------------------------------------------
# Forces the network name to match Traefik's config (prevents folder name issues)
COMPOSE_PROJECT_NAME=openteamskz

# Your domain name (e.g., openteams.example.com)
DOMAIN_NAME=

# Let's Encrypt email for certificate notifications
ACME_EMAIL=

# System timezone
TZ=UTC

RESTART_POLICY=unless-stopped

# Docker host IP (your server's public IP for Jitsi JVB)
DOCKER_HOST_ADDRESS=

# -----------------------------------------------------------------------------
# LLDAP (Identity Provider) - REQUIRED
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
LLDAP_JWT_SECRET=
LLDAP_ADMIN_PASSWORD=
LLDAP_BASE_DN=dc=openteams,dc=local

# -----------------------------------------------------------------------------
# MONGODB - REQUIRED
# -----------------------------------------------------------------------------
# Root password - generate with: openssl rand -base64 32
MONGO_ROOT_PASS=

# Replica set key - generate with: openssl rand -base64 756 | tr -d '\n'
MONGO_REPLICA_KEY=

# Scoped database passwords
RC_DB_PASS=
WEKAN_DB_PASS=

# -----------------------------------------------------------------------------
# NEXTCLOUD (MariaDB + Redis) - REQUIRED
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=
MYSQL_PASSWORD=
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# ROCKET.CHAT
# -----------------------------------------------------------------------------
ROCKETCHAT_VERSION=7

# -----------------------------------------------------------------------------
# JITSI - REQUIRED
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JICOFO_AUTH_PASSWORD=
JVB_AUTH_PASSWORD=

# JVB UDP port (default: 10000)
JVB_PORT=10000

# Recording (Jibri) - Generate with: openssl rand -base64 32
JIBRI_RECORDER_PASSWORD=
JIBRI_XMPP_PASSWORD=